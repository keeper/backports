#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# This has to be exported to make some magic below work.
export DH_OPTIONS

TARGET_KVER := `dpkg-parsechangelog|grep "^Source"|sed "s/Source:\ [a-z-]*-\(.*\)/\1/g"`
TARGET_KVERSION := $(TARGET_KVER)-generic
SRC_PATH := lib/modules/$(TARGET_KVERSION)/updates/lib/modules/$(TARGET_KVERSION)/extra
INSTALL_PATH := /lib/modules/$(TARGET_KVERSION)/extra

override_dh_auto_build:
	sed "s/#KVERSION#/$(TARGET_KVERSION)/g" debian/backports-wifi.postinst.in \
		> debian/backports-wifi-$(TARGET_KVER).postinst
	KVERSION=$(TARGET_KVERSION) make defconfig-wifi
	sed "s/#KVERSION#/$(TARGET_KVERSION)/g" debian/backports-wifi.postrm.in \
		> debian/backports-wifi-$(TARGET_KVER).postrm
	KVERSION=$(TARGET_KVERSION) make defconfig-wifi
	dh_auto_build -- DISTDIR=debian/tmp KVERSION=$(TARGET_KVERSION)
	@-echo "Building install list:"
	find ./ -name "*.ko" > debian/backports-wifi-$(TARGET_KVER).install
	awk -i inplace -v src_path=$(SRC_PATH) -v install_path=$(INSTALL_PATH) \
		'{src_str = $$1; install_str = $$1; sub(/^\./, src_path, src_str); sub(/^\./, install_path, install_str); print src_str, install_str;}' debian/backports-wifi-$(TARGET_KVER).install

override_dh_auto_install:
	mkdir -p debian/tmp/usr/share/backports-common
	DISTDIR=debian/tmp KVERSION=$(TARGET_KVERSION) make install

override_dh_auto_clean:
	@-dh_auto_clean -- KVERSION=$(TARGET_KVERSION)
	KVERSION=$(TARGET_KVERSION) make clean
	@-rm .config
	@-rm .config.old
	@-rm .kernel_config_md5
	@-rm Kconfig.kernel
	@-rm Kconfig.versions
	@-rm backport-include/backport/autoconf.h
	@-rm kconf/conf

override_dh_auto_test:

%:
	dh $@
